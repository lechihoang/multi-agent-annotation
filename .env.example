# ===========================================
# Multi-Agent Annotation System Configuration
# ===========================================

# API Keys
GROQ_API_KEY=your_groq_api_key_here
HF_TOKEN=your_huggingface_token_here

# Ollama Configuration (local)
OLLAMA_HOST=http://localhost:11434

# ===========================================
# Model Settings
# ===========================================

# Default models per provider
DEFAULT_GROQ_MODEL=deepseek-r1-distill-llama-70b
DEFAULT_HF_MODEL=meta-llama/Llama-3.2-8B-Instruct
DEFAULT_OLLAMA_MODEL=llama3.2

# ===========================================
# Consensus Thresholds
# ===========================================

# Auto-approve threshold (>= this score)
AUTO_APPROVE_THRESHOLD=0.85

# Human review threshold (>= this score, < auto_approve)
HUMAN_REVIEW_THRESHOLD=0.60

# ===========================================
# Agent Weights
# ===========================================

INTENT_AGENT_WEIGHT=0.35
ENTITY_AGENT_WEIGHT=0.35
FAQ_AGENT_WEIGHT=0.30

# ===========================================
# Queue Settings
# ===========================================

MAX_QUEUE_SIZE=1000
REVIEW_BATCH_SIZE=10

# ===========================================
# Server Settings
# ===========================================

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=true

# Frontend
VITE_API_URL=http://localhost:8000

# ===========================================
# Logging & Monitoring
# ===========================================

LOG_LEVEL=INFO
AUDIT_ENABLED=true

# ===========================================
# Database (optional)
# ===========================================

DATABASE_URL=sqlite+aiosqlite:///./data/annotations.db
